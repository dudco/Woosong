<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#fff"    xmlns:app="http://schemas.android.com/apk/res-auto"    tools:context=".SearchActivity">    <android.support.constraint.ConstraintLayout        android:layout_width="match_parent"        android:focusable="true"        android:focusableInTouchMode="true"        android:layout_height="wrap_content">                <View            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintRight_toRightOf="parent"            android:layout_width="match_parent"            android:layout_height="120dp"            android:id="@+id/topPanel"            android:background="@color/colorPrimary"/>        <EditText            android:id="@+id/searchEditText"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_marginStart="40dp"            android:layout_marginEnd="40dp"            android:layout_marginBottom="10dp"            android:background="@drawable/bg_circular_white_square"            android:backgroundTint="#fff"            android:elevation="5dp"            android:hint="여기에 입력하세요."            android:paddingStart="30dp"            android:textSize="12sp"            app:layout_constraintBottom_toBottomOf="@id/topPanel"            app:layout_constraintDimensionRatio="H, 6:1"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toBottomOf="@id/topPanel" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="20dp"            android:elevation="5dp"            android:src="@drawable/ic_search_black_24dp"            android:tint="#999999"            app:layout_constraintBottom_toBottomOf="@id/searchEditText"            app:layout_constraintRight_toRightOf="@id/searchEditText"            app:layout_constraintTop_toTopOf="@id/searchEditText" />        <android.support.v7.widget.RecyclerView            android:layout_width="match_parent"            android:id="@+id/searchList"            app:spanCount="2"            app:layoutManager="android.support.v7.widget.GridLayoutManager"            app:layout_constraintTop_toBottomOf="@id/searchEditText"            app:layout_constraintLeft_toLeftOf="parent"            android:layout_marginTop="22dp"            app:layout_constraintRight_toRightOf="parent"            android:layout_height="wrap_content" />    </android.support.constraint.ConstraintLayout></ScrollView>