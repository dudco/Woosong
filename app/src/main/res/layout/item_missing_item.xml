<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="wrap_content"    android:paddingHorizontal="8dp"    android:background="#fff"    android:paddingBottom="8dp"    android:layout_height="wrap_content">    <com.loopeer.shadow.ShadowView        android:id="@+id/imgShadow"        android:layout_width="150dp"        android:layout_height="170dp"        app:cornerRadius="3dp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:shadowMargin="3dp"        app:shadowRadius="3dp">        <ImageView            android:id="@+id/imgView"            android:scaleType="centerCrop"            android:layout_width="match_parent"            android:layout_height="match_parent" />    </com.loopeer.shadow.ShadowView>    <TextView        android:id="@+id/findLocationText"        android:layout_width="wrap_content"        android:layout_marginStart="6dp"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:textColor="#535353"        android:textSize="10sp"        app:layout_constraintLeft_toLeftOf="@id/imgShadow"        app:layout_constraintTop_toBottomOf="@id/imgShadow"        tools:text="남영" />    <TextView        android:id="@+id/itemName"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="3.5dp"        android:textColor="#484848"        android:textSize="12sp"        app:layout_constraintLeft_toLeftOf="@id/findLocationText"        app:layout_constraintTop_toBottomOf="@id/findLocationText"        tools:text="남성용 장지갑" />    <TextView        android:id="@+id/findDateText"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="6dp"        android:lineSpacingExtra="4.7sp"        android:textColor="#535353"        android:textSize="10sp"        app:layout_constraintLeft_toLeftOf="@id/itemName"        app:layout_constraintTop_toBottomOf="@id/itemName"        tools:text="06/23" /></android.support.constraint.ConstraintLayout>