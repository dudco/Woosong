<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"                                             xmlns:app="http://schemas.android.com/apk/res-auto"                                             xmlns:tools="http://schemas.android.com/tools"                                             android:layout_width="match_parent"                                             android:background="#fff"                                             android:focusable="true"                                             android:focusableInTouchMode="true"                                             android:layout_height="match_parent"                                             tools:context=".MainActivity">    <View            android:id="@+id/topPanel"            android:layout_width="match_parent"            android:layout_height="0dp"            android:background="@color/colorPrimary"            app:layout_constraintDimensionRatio="H,6:3"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toTopOf="parent"/>    <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:shadowColor="#29000000"            android:shadowRadius="7"            android:text="잃어버린 물건이 있으신가요?"            android:textColor="#ffffff"            android:textSize="20sp"            android:textStyle="bold"            app:layout_constraintBottom_toBottomOf="@id/topPanel"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintVertical_bias="0.6"/>    <EditText            android:id="@+id/searchEditText"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_marginStart="40dp"            android:layout_marginEnd="40dp"            android:layout_marginBottom="10dp"            android:background="@drawable/bg_circular_white_square"            android:backgroundTint="#fff"            android:elevation="5dp"            android:hint="여기에 입력하세요."            android:paddingStart="30dp"            android:textSize="12sp"            app:layout_constraintBottom_toBottomOf="@id/topPanel"            app:layout_constraintDimensionRatio="H, 6:1"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toBottomOf="@id/topPanel"/>    <ImageView            android:id="@+id/searchBtn"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="20dp"            android:elevation="5dp"            android:src="@drawable/ic_search_black_24dp"            android:tint="#999999"            app:layout_constraintBottom_toBottomOf="@id/searchEditText"            app:layout_constraintRight_toRightOf="@id/searchEditText"            app:layout_constraintTop_toTopOf="@id/searchEditText"/>    <TextView            android:id="@+id/textView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:text="최근 신고접수"            android:textColor="#000000"            android:textSize="14sp"            android:textStyle="bold"            app:layout_constraintLeft_toLeftOf="@id/searchEditText"            app:layout_constraintTop_toBottomOf="@id/searchEditText"/>    <android.support.v7.widget.RecyclerView            android:id="@+id/itemList"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginTop="16dp"            android:clipToPadding="false"            android:paddingStart="24dp"            android:paddingEnd="40dp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/textView"/>    <Button            android:id="@+id/registerBtn"            android:layout_width="146dp"            android:layout_height="50dp"            android:layout_marginEnd="8dp"            android:background="@drawable/bg_circular_blue_square"            android:elevation="3dp"            android:text="등록하기"            android:textColor="#fff"            android:textStyle="bold"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintHorizontal_chainStyle="packed"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintRight_toLeftOf="@id/alreadyFindBtn"            app:layout_constraintTop_toBottomOf="@id/itemList"/>    <Button            android:id="@+id/alreadyFindBtn"            android:layout_width="146dp"            android:layout_height="50dp"            android:layout_marginStart="8dp"            android:background="@drawable/bg_circular_pink_square"            android:elevation="3dp"            android:text="예약된 물품"            android:textColor="#fff"            android:textStyle="bold"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintLeft_toRightOf="@id/registerBtn"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toBottomOf="@id/itemList"/>    <ImageView android:layout_width="wrap_content"               android:id="@+id/refreshBtn"               android:layout_height="wrap_content"               app:layout_constraintTop_toTopOf="parent"               app:layout_constraintRight_toRightOf="parent"               android:src="@drawable/ic_refresh_black_24dp"               android:layout_margin="16dp"/></android.support.constraint.ConstraintLayout>